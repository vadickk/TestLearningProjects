<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textViewFragmentTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToActivityFromFragmentTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send to activity"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewFragmentTwo"
        app:layout_constraintStart_toStartOf="@+id/textViewFragmentTwo"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentTwo" />

    <Button
        android:id="@+id/buttonToFragmentFromFragmentTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send to fragment two"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonToActivityFromFragmentTwo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonToActivityFromFragmentTwo"
        app:layout_constraintTop_toBottomOf="@+id/buttonToActivityFromFragmentTwo" />

</androidx.constraintlayout.widget.ConstraintLayout>